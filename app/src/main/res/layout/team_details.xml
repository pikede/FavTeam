<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/padding"
    android:paddingBottom="@dimen/padding">

    <ImageView
        android:id="@+id/team_logo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:contentDescription="@string/team_logo_description"
        app:srcCompat="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/team_id_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/team_id_text"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/team_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_for_data"
            android:text="@string/team_id"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/team_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/team_name_text"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_for_data"
            android:text="@string/team_name"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/league_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/team_league_text"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/league"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_for_data"
            android:text="@string/league"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/team_alternate_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/team_alternate_name_text"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/team_alternate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_for_data"
            android:text="@string/team_alternate_Name"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/team_stadium_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/team_stadium_text"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/team_stadium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_for_data"
            android:text="@string/team_stadium"
            android:textAlignment="center" />

    </LinearLayout>

    <ImageView
        android:id="@+id/team_stadium_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:contentDescription="@string/team_stadium_description"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/team_stadium_location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/team_stadium_location_text"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/team_stadium_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_for_data"
            android:text="@string/team_stadium_location"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/stadium_capacity_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/team_stadium_capacity_text"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/stadium_capacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_for_data"
            android:text="@string/stadium_capacity"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/team_description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/description_margin"
            android:text="@string/team_description_text"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/team_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/team_description"
            android:textAlignment="center" />

    </LinearLayout>

</LinearLayout>